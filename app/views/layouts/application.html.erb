  <body class="d-flex flex-column" data-user-id="<%= current_user.id if user_signed_in? %>">
    <%= render 'shared/navbar' %>
    <%= render 'shared/flashes' %>
    <div class="notifications">

    </div>
    <div class="container">
    <%= yield %>
    </div>
    <footer class="d-flex justify-content-center align-items-center mt-auto py-3">
      <p class="px-3">Â©2020 Snapcarte</p>
      <p class="px-3"><i class="fab fa-facebook-f"></i></p>
      <p class="px-3"><i class="fab fa-instagram"></i></p>
      <p class="px-3"><i class="fab fa-twitter"></i></p>
    </footer>
  </body>
</html>
