<div class="row mt-5">
  <div class="col-12">
    <h1>Confirm Menu</h1>
  </div>
  <div class="col-12">
    <p>Click on a menu item's name or price to edit it, then press Enter to save.</p>
  </div>
</div>

<div class="row align-items-center">
  <div class="col-12 col-lg-6">
    <%= cl_image_tag @restaurant.menu_photo.key, class: 'w-100 mb-3' %>
  </div>
  <div class="col-12 col-lg-6">

      <%= simple_form_for @restaurant, url: update_menus_restaurant_path, remote: true do |f| %>
        <%= f.simple_fields_for :menus do |m| %>
          <%= m.input :name, label: 'Section Name' %>
          <ul class="list-group mb-3" data-controller="dishes">
          <%= m.simple_fields_for :dishes, m.object.dishes.order(:created_at) do |d|%>
            <li class="dish list-group-item d-flex align-items-center" data-controller="dish">
              <div class="d-flex justify-content-between w-100 hidden" data-target="dish.formBox">
                <%= d.input :name, label: false, input_html: { data: { target: 'dish.nameForm'} } %>
                <%= d.input :price, label: false, input_html: { size: 5, data: { target: 'dish.priceForm' } } %>
              </div>
              <div class="d-flex justify-content-between w-100">
                <span data-target="dish.name" data-action="click->dish#showForm">
                  <%= d.object.name %>
                </span>
                <span data-target="dish.price" data-action="click->dish#showForm">
                  <%= d.object.pricetag %>
                </span>
              </div>

                <%= link_to dish_path(d.object), class: 'ml-3', method: :delete, remote: true do %>
                  <i class="fas fa-minus-circle"></i>
                <% end %>
            </li>
          <% end %>
          </ul>
        <% end %>

        <%= f.submit "Update", class: "hidden", data: { target: 'dishes.submitButton'} %>
      <% end %>



  </div>
  <div class="col-12">
    <%= link_to "Continue to restaurant preview", restaurant_path(@restaurant), class: 'btn btn-primary' %>
  </div>
</div>

