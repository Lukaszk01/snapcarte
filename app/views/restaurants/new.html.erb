  <div class="container">
    <h1 class="d-flex justify-content-center create"><strong>Create restaurant</strong></h1>
  <div class="row justify-content-center">
    <div class="col-12 col-md-8 mt-5">
      <%= simple_form_for @restaurant, remote: true do |f| %>
      <%= f.input :name, label: ('<i class="fas fa-file-signature"></i> Restaurant name').html_safe%>
      <%= f.input :address, label: ('<i class="fas fa-map-pin"></i> Address').html_safe %>
      <%= f.input :phone_number, label: ('<i class="fas fa-phone"></i> Phone_number').html_safe %>
      <%= f.input :cuisine, label: ('<i class="fas fa-utensils"></i> Cuisine').html_safe %>
      <%= f.input :description, label: ('<i class="fas fa-pen"></i></i> Description').html_safe %>
      <div class="mb-3 instruction">Write a short description of your restaurant and let customers know your general hours for accepting orders.</div>
      <%= f.input :photo, as: :file, label: ('Upload restaurant photo').html_safe %>
      <div class="mb-3 instruction">Write a short description of your restaurant and let customers know your general hours for accepting orders.</div>
      <h2>Menu</h2>
      <%= f.simple_fields_for :menus do |m|%>
      <%= m.input :photos, as: :file, mulitiple: true, label: ('Upload menu').html_safe %>
      <div class="mb-3 instruction">Upload a photo of your menu and Snapcarte will digitize it. You can confirm your dish names and prices on the next page.</div>
      <% end %>
      <div class="mt-4 mb-5">
        <%= f.submit 'Create restaurant', class:"btn btn-primary"%>
      </div>
    <% end %>
    </div>
  </div>
</div>


