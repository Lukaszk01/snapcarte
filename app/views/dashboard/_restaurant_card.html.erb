<div class="mb-3 d-flex restaurant-card">


  <div class="card-body">
<div class="button-rest-card">
    <h2 class="d-flex justify-content-between"><%= restaurant.name %>
      <span class="<%= restaurant.open ? 'success' : 'danger'%>"> <div class="button-card"><%= restaurant.status %></div> </span></h2>
    </div>
    <div><%= link_to '<i class="far fa-eye"></i> View restaurant'.html_safe , restaurant_path(restaurant), class: "btn btn-primary" %></div>
    <div><%= link_to '<i class="fas fa-edit"></i> Edit Menu'.html_safe, edit_menus_restaurant_path(restaurant), class: "btn btn-primary"%></div>
    <div><%= link_to '<i class="fab fa-uber"></i> Export to uber eats'.html_safe, restaurant_path(restaurant, export: true), method: :patch, class: "btn btn-primary"%></div>
  </div>
   <%= cl_image_tag restaurant.photo.key, class: 'restaurant-card-img' %>

</div>
