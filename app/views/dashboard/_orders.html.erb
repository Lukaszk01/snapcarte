<% restaurants.each do |restaurant| %>
  <h2><% restaurant.name %></h2>
  <div class="col-12 col-md-6">
    <h3>Accepted orders</h3>
    <% restaurant.carts.where(confirmed: 2).each do |order| %>
      <% order.cart_items.each do |item| %>
        <%= item.dish.name %>
        <%= item.dish.pricetag %>
      <% end %>
    <% end %>
  </div>
  <div class="col-12 col-md-6">
    <h3>Pending orders</h3>
    <% restaurant.carts.where(confirmed: 1).each do |order| %>
      <% order.cart_items.each do |item| %>
        <%= item.dish.name %>
        <%= item.dish.pricetag %>
      <% end %>
    <% end %>
  </div>

<% end %>
